<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each photos}}
    <tr>
      <td>
        {{title}}
      </td>
      <td>
        {{description}}
      </td>
      <td>
        <a href="/location/{{../location._id}}/deletephoto/{{_id}}" class="ui icon button">
          <i class="fas fa-trash"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>